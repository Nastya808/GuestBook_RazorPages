@page
@model GuestBookApp.Pages.GuestBook.LoginModel
@{
    ViewData["Title"] = "Вход";
}

<div class="container mt-5">
    <h2 class="text-center">Вход в систему</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="LoginName" class="form-label">Логин</label>
                            <input asp-for="LoginName" class="form-control" id="LoginName" />
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Пароль</label>
                            <input asp-for="Password" type="password" class="form-control" id="Password" />
                        </div>
                        <button type="submit" class="btn btn-primary">Войти</button>
                    </form>
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
